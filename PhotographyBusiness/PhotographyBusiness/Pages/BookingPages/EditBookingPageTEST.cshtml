@page "{id:int}"
@model PhotographyBusiness.Pages.BookingPages.EditBookingPageTestModel
@{
}
<link rel="stylesheet" href="~/css/styles.css" />

<div class="transparent-black">
    <div class="d-flex justify-content-center" style="min-height: 79vh;">
        <div class="d-flex flex-column m-4" style="min-width: 24vw">
            <form method="post" class="p-6" style="background-color: rgba(0,0,0,0.7); min-height: 20vh; border:6px solid black;">
               <div class="container">
				   <div class="row">
						<div class="col-md-6" style="word-wrap:break-word;">
							<div class="form-group p-2">
								<label asp-for="Booking.User.Name" class="control-lable text-white"></label>
								<input asp-for="Booking.User.Name" class="form-control" readonly="@(true)" />
							</div>
							<div class="form-group p-2">
								<label asp-for="Booking.User.Email" class="control-lable text-white"></label>
								<input asp-for="Booking.User.Email" class="form-control" readonly="@(true)" />
							</div>

							<div class="form-group p-2">
								<label asp-for="Booking.User.PhoneNumber" class="control-lable text-white"></label>
								<input asp-for="Booking.User.PhoneNumber" class="form-control" />
								<span asp-validation-for="Booking.User.PhoneNumber" class="text-danger"></span>
							</div>
							<div class="form-group p-2">
								<label asp-for="Booking.CustomerNote" class="control-lable text-white"></label>
								<textarea asp-for="Booking.CustomerNote" class="form-control" rows="4" style="font-size:15px; vertical-align:top; border: 1px solid #ced4da; padding: 10px;"></textarea>
								<span asp-validation-for="Booking.CustomerNote" class="text-danger"></span>
							</div>
					   </div>
						<div class="col-md-6" style="word-wrap:break-word;">
							<div class="form-group p-2">
								<label asp-for="Booking.Address" class="control-lable text-white"></label>
								<textarea asp-for="Booking.Address" class="form-control" rows="4" style="font-size:15px; vertical-align:top; border: 1px solid #ced4da; padding: 10px;"></textarea>
								<span asp-validation-for="Booking.Address" class="text-danger"></span>
							</div>
							<div class="form-group p-2">
								<label asp-for="Booking.Category" class="control-lable text-white"></label>
								<input asp-for="Booking.Category" class="form-control" />
								<span asp-validation-for="Booking.Category" class="text-danger"></span>
							</div>
							<div class="form-group p-2">
								<label asp-for="Booking.AdminNote" class="control-lable text-white"></label>
								<textarea asp-for="Booking.AdminNote" class="form-control" rows="4" style="font-size:15px; vertical-align:top; border: 1px solid #ced4da; padding: 10px;"></textarea>
								<span asp-validation-for="Booking.AdminNote" class="text-danger"></span>
							</div>
							<div class="form-group p-2">
								<label asp-for="Booking.Price" class="control-lable text-white"></label>
								<input asp-for="Booking.Price" class="form-control" />
								<span asp-validation-for="Booking.Price" class="text-danger"></span>
							</div>
					   </div>
				   </div>
			   </div>
				<div class="form-group m-2 d-flex justify-content-between">
					<a asp-page="/BookingPages/GetAllBookings" class="btn btn-dark btn-border-white" style="border-radius: 0; min-width: 6vw;">Go back</a>
					<input type="submit" value="Update" class="btn btn-light" style="min-width: 6vw; border-radius: 0;" />
				</div>
					
			</form>
        </div>
    </div>
</div>



<style>
    .bg-img {
        background-image: url(../../wwwroot/media/img3.jpg);
    }
</style>



