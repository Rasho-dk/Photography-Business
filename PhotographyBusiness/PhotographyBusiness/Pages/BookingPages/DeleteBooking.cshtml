@page
@model PhotographyBusiness.Pages.BookingPages.DeleteBookingModel
@{
}
<div class="bg-dark">
    <div class="transparent-black">
        <h1 class="text-white text-center pt-3">Confirm delete</h1>
        <div class="d-flex justify-content-center" style="">
            <div class="d-flex flex-column m-4" style="min-width:30vw">
                <h5 class="text-white text-center">Are you sure you want to delete this booking?</h5>
                <form method="post" class="p-4" style="background-color: rgba(0,0,0,0.7)">
                    <div class="form-group" hidden>
                        <label asp-for="@Model.Booking.BookingId" class="control-label text-white">Id</label>
                        <input asp-for="@Model.Booking.BookingId" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.User.Name" class="control-label text-white">Customer name</label>
                        <input asp-for="@Model.Booking.User.Name" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.Category" class="control-label text-white">Category</label>
                        <input asp-for="@Model.Booking.Category" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.Price" class="control-label text-white">Price</label>
                        <input asp-for="@Model.Booking.Price" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.AdminNote" class="control-label text-white">Admin</label>
                        <input asp-for="@Model.Booking.AdminNote" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.Date" class="control-label text-white">Date</label>
                        <input asp-for="@Model.Booking.Date" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Booking.Address" class="control-label text-white">Address</label>
                        <input asp-for="@Model.Booking.Address" class="form-control" readonly />
                    </div>
                    <div class="form-group mt-2 d-flex justify-content-between">
                        <a asp-page="/BookingPages/GetAllBookings" class="btn btn-dark btn-border-white" style="border-radius: 0; min-width: 6vw;">Go back</a>
                        <input type="submit" value="Delete" class="btn btn-light" style="min-width: 6vw; border-radius: 0;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
