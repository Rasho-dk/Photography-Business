@page
@model PhotographyBusiness.Pages.BookingPages.BookingRequestModalPageModel
@{
}

<div class="modal" id="myModal">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><small class="text-muted">(Id: @Model.Booking.BookingId)</small> @Model.Booking.User.Email</h5>
                <a type="button" class="close" asp-page="GetAllBookingRequestsPage">&times;</a>
            </div>
            <div class="modal-body">
                <table class="w-100 no-border">
                    <tr>
                        <th class="w-50 border-right align-top">
                            <div class="d-grid">
                                <div>
                                    <label asp-for="@Model.Booking.Category" class="control-label text-black">Category</label>
                                    <input asp-for="@Model.Booking.Category" class="form-control" readonly/>
                                </div>
                                <div>
                                    <label asp-for = "@Model.Booking.Date" class="control-label text-black">Date</label>
                                    <input asp-for="@Model.Booking.Date" class="form-control" readonly/>
                                </div>
                                <div>
                                    <label asp-for = "@Model.Booking.Address" class="control-label text-black">Address</label>
                                    <input asp-for="@Model.Booking.Address" class="form-control" readonly />
                                </div>
                                <div>
                                    <label asp-for="@Model.Price" class="control-label text-black">Price</label>
                                    <input asp-for="@Model.Price" class="form-control"/>
                                </div>
                                <div>
                                    <label asp-for="@Model.AdminNote" class="control-label text-black">Admin Note</label>
                                    <textarea asp-for="@Model.AdminNote" id="AdminNote" name="Note" rows="6" cols="50" class="form-control textarea-input" style="resize:none"></textarea>
                                </div>
                            </div>
                        </th>
                        <th class="w-50 border-left align-top">
                            <div class="d-grid">
                                <label asp-for = "@Model.Booking.User.Name" class="control-label text-black">Customer Name</label>
                                <input asp-for="@Model.Booking.User.Name"  class="form-control" readonly/>
                            </div>
                            <div>
                                <label asp-for="@Model.Booking.User.Email" class="control-label text-black">Customer Email</label>
                                <input asp-for="@Model.Booking.User.Email" class="form-control" readonly />
                            </div>
                            <div>
                                <label asp-for="@Model.Booking.CustomerNote" class="control-label text-black">Customer Note</label>
                                <textarea asp-for="@Model.Booking.CustomerNote" name="Note" rows="6" cols="50" class="form-control textarea-input" style="resize:none" readonly></textarea>
                            </div>
                        </th>
                    </tr>
                </table>
                
                <div class="modal-footer">
                    <a class="btn btn-dark nav-link text-dark text-white" style="border-radius: 0; min-width: 5vw; max-width: 15vw"
                    asp-page="AcceptRequestPage" asp-route-id="@Model.Booking.BookingId" 
                    asp-route-price="@Model.Price" asp-route-note="@Model.AdminNote">Accept</a>

                    <a class="btn text-dark btn-border-black btn-square nav-link" style="border-radius: 0; min-width: 5vw; max-width: 15vw;" 
                    asp-page="GetAllBookingRequestsPage" asp-route-id="@Model.Booking.BookingId">Decline</a>
                </div>
            </div>
        </div>

    </div>
</div>



<div class="container d-flex flex-column">
    <div class="text-center">
        <br />
        <h1>Booking Requests</h1>
        <br />
        <div class="d-flex justify-content-around">
            <table class="w-100 right-border left-border">
                <thead>
                    <tr class="">
                        <th>Id</th>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Category</th>
                        <th>Address</th>

                    </tr>
                </thead>
                <tbody>
                    @if (@Model.BookingRequests != null)
                    {
                        foreach (var booking in Model.BookingRequests)
                        {
                            <tr class="">
                                <td><a class="btn btn-dark btn-round" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.BookingId</a></td>
                                <td><a class="text-dark text-decoration-none" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.Date</a></td>
                                <td><a class="text-dark text-decoration-none" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.User.Name</a></td>
                                <td><a class="text-dark text-decoration-none" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.User.Email</a></td>
                                <td><a class="text-dark text-decoration-none" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.Category</a></td>
                                <td><a class="text-dark text-decoration-none" asp-page="BookingRequestModalPage" asp-route-id="@booking.BookingId">@booking.Address</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div>
            <a asp-page="/AdminPages/AdminDashboardPage">Back to dashboard</a>
        </div>
    </div>
</div>

<style>
    table {
        border-collapse: collapse;
    }



    .no-border {
        border: none;
    }

    th {
        border: none;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    table {
        border-top: solid 2px black;
        border-bottom: solid 2px black;
    }

    .right-border {
        border-right: solid 2px black;
    }

    .top-border {
        border-top: solid 2px black;
        border-bottom: solid 2px black;
    }

    .left-border {
        border-left: solid 2px black;
    }

    td {
        border: solid 1px black;
    }

    h5 {
        font-size: 1.1rem;
    }

    .btn-round {
        border-radius: 50px;
        transition: all .2s ease-in-out;
    }

        .btn-round:hover {
            background-color: whitesmoke;
            border: solid 1px whitesmoke;
            color: black;
        }

    .number-contrast {
        padding: 5px;
        padding-right: 10px;
        padding-left: 10px;
        border-radius: 100px;
    }
</style>





@section Scripts 
{
    
    <script>
        $(document).ready(function ()
        {
            //$("#myModal").modal({backdrop: "static"});
            $("#myModal").modal('show');
        });
    </script>

}