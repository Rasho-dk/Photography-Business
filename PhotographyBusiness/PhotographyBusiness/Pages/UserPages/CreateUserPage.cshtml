@page
@model PhotographyBusiness.Pages.UserPages.CreateUserPageModel
@{
}
<div class="d-flex justify-content-center">
    <div class="d-flex flex-column w-25 m-4">
        <form method="post" class="">
            <div class="form-group p-2">
                <label asp-for="@Model.Email" class="control-lable">E-Mail</label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label asp-for="@Model.PhoneNumber" class="control-lable">Phone</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label asp-for="@Model.FullName" class="control-lable">Full name</label>
                <input asp-for="@Model.FullName" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label asp-for="@Model.Password" class="control-lable"></label>
                <input asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-group m-2 d-flex justify-content-between">
                <a asp-page="../Index/" class="btn btn-primary" style="width: 6vw">Go back</a>
                <input type="submit" value="Create" class="btn btn-success" style="width: 6vw" />
            </div>
        </form>
    </div>
</div>
