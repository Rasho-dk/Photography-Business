@page "{albumid:int}"
@model PhotographyBusiness.Pages.PhotoPages.AddPhotoToAlbumModel
@{
}

<div class="container" style="min-height: 50vh;">

    <form method="post" enctype="multipart/form-data" class="p-4">
        <div class="mb-3" style="max-width:50%; min-width:10%;">
            <label asp-for="@Model.Photo.ImageFile" class="form-label">Add phoyo to the album</label>
            <input class="form-control" type="file" name="Imgs" asp-for="@Model.Imgs" multiple />
            <br />
            <div class="form-group m-1 d-flex justify-content-between">
                <button type="submit" class="btn btn-dark">Upload Photo</button>

                <a asp-page="/AlbumPages/Index" class="btn pop-out
                btn-border-dark border-secondary">Go back to the album</a>
            </div>
        </div>
                
    </form>

</div>


