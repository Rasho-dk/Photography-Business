<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotographyBusiness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotographyBusiness.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow border-bottom">
            <div class="container justify-content-center">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/media/logo.png" style="height: 65px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-grow-0">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Portfolio
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" href="#">Weddings</a></li>
                                <li><a class="dropdown-item text-dark" href="#">Portraits</a></li>
                                <li><a class="dropdown-item text-dark" href="#">Automotive</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" href="#">Miscellaneous</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">About us</a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-dark nav-link text-white" style="border-radius: 0; width: 5vw" asp-area="" asp-page="../Index">Enquiry</a>
                        </li>
                        <li class="nav-item ms-3">
                            <a asp-page="/UserPages/CreateUserPage" class="btn btn-primary nav-link text-white" style="border-radius: 0; width: 5vw">Log-in</a>
                        </li>
                    </ul>
                </div> 
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - PortfolioPrototype - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>