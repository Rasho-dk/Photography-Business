@using PhotographyBusiness.Pages.AccountPages
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotographyBusiness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotographyBusiness.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/5d5c0091b5.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow border-bottom">
            <div class="container justify-content-center">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/media/logo.png" style="height: 65px" class="pop-out"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-grow-0">
                    <ul class="navbar-nav">


                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Portfolio
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" href="#">Weddings</a></li>
                                <li><a class="dropdown-item text-dark" href="#">Portraits</a></li>
                                <li><a class="dropdown-item text-dark" href="#">Automotive</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-dark" href="#">Miscellaneous</a></li>
                            </ul>
                        </li>


                        <li class="nav-item ms-3">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">About us</a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="nav-link text-dark" asp-area="" asp-page="/BookingPages/TestCalender">Calender</a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-dark nav-link text-dark text-white" style="border-radius: 0; min-width: 5vw; max-width: 15vw" asp-area="" asp-page="/Index">Enquiry</a>
                        </li>


                       @{
                           if ( Context.User.Identity.Name == null)
                           {
                                <li class="nav-item dropdown ms-3">
                          
                                
                            
                                    <a class="nav-link dropdown-toggle text-dark btn-border-black btn-square text-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                                    style="min-width: 5vw; max-width: 15vw;">
                                    Login                              
                                    </a>
                          
                                    <div class="dropdown-menu login-dropdown dropdown-menu-center" style="opacity:0.9; min-width: 18vw;" aria-labelledby="navbarDropdown">                         
                                            <form asp-page="/AccountPages/LogInPage" method="post">
                                                <div class="dropdown-item text-dark">
                                                    <label for="inputEmail">Email address</label>
                                                    <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="Email">
                                                </div>
                                                <div class="dropdown-item text-dark">
                                                    <label for="inputPassword">Password</label>
                                                    <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="Password">
                                                </div>
                                                <div class="d-flex justify-content-center">
                                                    <button type="submit" class="btn btn-primary m-2">Sign in</button>

                                                </div>
                                            </form>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" style="color:black" asp-page="/AccountPages/CreateUserPage">Register</a>
                                
                                    </div>

                                </li>                           
                           }
                          else
                          {
                                //<li class="nav-item">
                                //    User :@LogIndPageModel.LoggedInUser.Name
                                //</li>                        

                                <li class="nav-item dropdown ms-3">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                        <i class="fa-regular fa-user fa-beat"></i>

                                        <i class="fa-regular fa-user pop-out "></i> 


                                        <i class="fa-regular fa-user pop-out"></i> 

                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item text-dark" href="#">MyProfile</a></li>
                                        <li><a class="dropdown-item text-dark" href="#">Booking</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-dark" href="/AccountPages/LogOutPage" >Log out</a></li>
                                    </ul>
                                </li>

                          }
                        }
                     

                        
                      

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

