@page
@model PhotographyBusiness.Pages.UsersPage.LogIndPageModel
@{
}
<link rel="stylesheet" href="~/css/styles.css" />

<div class="transparent-black">
    <div class="d-flex justify-content-center" style=" height: 79vh;">
        <div class="d-flex flex-column m-4" style="min-width: 30vw">
            <div class="container">
              

                <form method="post" class="p-4" style="background-color: rgba(0,0,0,0.7)">
                    <div class="form-group p-2">
                        <label asp-for="Email" class="col-form-label text-white" ></label>
                        <div>
                            <input asp-for="Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2">
                        <label asp-for="Password" class="col-form-label text-white"></label>
                        <div>
                            <input asp-for="Password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    <div style="color:red">
                        @Model.DisplayMessage
                    </div>

                    <div class="form-group">
                        <button class="btn btn-dark btn-border-white" style="border-radius: 0; min-width: 6vw;">Log in</button>
                    </div>

                   


                </form>
            </div>
       </div>

    </div>
</div>


<style>
    .bg-img {
        background-image: url(../../wwwroot/media/img3.jpg);
    }
</style>

