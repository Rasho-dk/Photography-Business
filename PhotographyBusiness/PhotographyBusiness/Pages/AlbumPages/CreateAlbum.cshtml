@page "{id:int}"
@model PhotographyBusiness.Pages.AlbumPages.CreateAlbumModel
@{
}


<div class="container lightbox mt-4 mb-2" style="min-height: 75.2vh;" id="contbox">
    @if (Model.DisplayAlert is not null)
    {
        <div class="alert alert-danger ms-2" style="width:50%" role="alert">
            @Model.DisplayAlert
        </div>
    }
    <h1 class="pop-out mt-3 ms-4" style="font-family:fantasy; float:left;">Create an album</h1>
    <br />
    <br />
    
    <form method="post" class="p-4 test-dark" style="width:50%">
        <div class="form-group p-2">
            <label asp-for="@Model.Album.Name" class="control-lable text-dark"></label>
            <input asp-for="@Model.Album.Name" value="@Model.Booking.User.Name" class="form-control" />
            <span asp-validation-for="@Model.Album.Name" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="@Model.Album.Description" class="control-lable text-dark"></label>
            <input asp-for="@Model.Album.Description" value="@Model.Booking.Category" class="form-control" />
            <span asp-validation-for="@Model.Album.Description" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <input asp-for="@Model.Booking.BookingId" class="form-control" hidden readonly />

        </div>

        <div class="form-group m-2 d-flex justify-content-between">
            <input type="submit" value="Create" class="btn btn-light btn-border-black" style="min-width: 6vw;" />
        </div>

    </form>

</div>


